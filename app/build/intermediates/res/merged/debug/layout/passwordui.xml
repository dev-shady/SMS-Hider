<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <EditText
        android:layout_width="match_parent"
        android:inputType="numberPassword"
        android:layout_margin="20dp"
        android:layout_height="0dp"
          android:background="#eee9e9"
        android:layout_weight="0.15"
        android:ems="10"
        android:id="@+id/editText" />

    <TableLayout
              
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="0,1,2"
      
        android:layout_marginTop="20dp"
        android:layout_weight="0.6"
        android:background="#eee9e9"
        >
      <TableRow  android:layout_weight="0.15"
          >
          <TextView 
              android:layout_gravity="center"
              android:text="1"
              android:id="@+id/b1" />
          <TextView 
               android:layout_gravity="center"
              android:text="2"
              android:id="@+id/b2" />
          <TextView 
               android:layout_gravity="center"
              android:text="3"
              android:id="@+id/b3" />"
      </TableRow>
      <TableRow  android:layout_weight="0.15">
          <TextView 
               android:layout_gravity="center"
              android:text="4"
              android:id="@+id/b4" />
          <TextView 
               android:layout_gravity="center"
              android:text="5"
              android:id="@+id/b5" />
          <TextView 
               android:layout_gravity="center"
              android:text="6"
              android:id="@+id/b6" />
      </TableRow>
      <TableRow  android:layout_weight="0.15">
          <TextView 
               android:layout_gravity="center"
              android:text="7"
              android:id="@+id/b7" />
          <TextView 
               android:layout_gravity="center"
              android:text="8"
              android:id="@+id/b8" />
          <TextView 
               android:layout_gravity="center"
              android:text="9"
              android:id="@+id/b9" />
      </TableRow>
      <TableRow  android:layout_weight="0.15">
          <TextView 
               android:layout_gravity="center"
              android:text="-"
              android:id="@+id/bHyphen" />
          <TextView 
               android:layout_gravity="center"
              android:text="0"
              android:id="@+id/b0" />
          <TextView 
               android:layout_gravity="center"
              android:text="del"
              android:id="@+id/bDel" />
      </TableRow>
    </TableLayout>
</LinearLayout>