  <TextView android:id="@+id/nameConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
       
        android:text="contact"
        android:padding="3dp"
        android:textColor="#000000"/>
  
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/nameConversation" >
  <TextView android:id="@+id/textConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
         android:text="text"
         android:maxLength="10"
        
         android:ellipsize="end"
         android:padding="2dp"
         
        android:textColor="#000000"/>
  
  <TextView android:id="@+id/dateConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginTop="2dp"
       
         android:text="date"
         android:padding="2dp"
         
        android:textColor="#000000"/>
  </RelativeLayout>
    <CheckBox android:id="@+id/checkboxConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true" 
       android:visibility="invisible"
      /> 
  
